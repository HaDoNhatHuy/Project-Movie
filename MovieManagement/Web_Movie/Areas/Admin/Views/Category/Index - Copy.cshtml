@using Database_Movie.EF
@model IEnumerable<Category>

@{
    ViewData["Title"] = "DANH SÁCH THỂ LOẠI";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="col-md-12">
    <h3 class="title-5 m-b-35 text-center text-primary font-weight-bold">@ViewData["Title"]</h3>

    <div class="table-responsive table-responsive-data2">
        <table class="table table-data2" id="categoryTable">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Tên thể loại</th>
                    <th>Chức năng</th>
                </tr>
            </thead>
            <tbody id="categoryBody">
                @foreach (var item in Model)
                {
                    <tr>
                        <td><strong>@item.CategoryId</strong></td>
                        <td>
                            <a href="#" class="category-link" data-id="@item.CategoryId">
                                @item.CategoryName
                            </a>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.CategoryId" class="btn btn-warning btn-sm">Sửa</a>
                            <a asp-action="Delete" asp-route-id="@item.CategoryId" class="btn btn-danger btn-sm">Xóa</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Js {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
           $(document).ready(function () {
            $("#categoryTable").on("click", ".category-link", function (e) {
                e.preventDefault();
                var parentId = $(this).data("id");

                $.ajax({
                    url: "/Admin/Category/GetChildCategory",
                    type: "GET",
                    data: { parentId: parentId },
                    success: function (data) {
                        if (data.length > 0) {
                            var html = "";
                            data.forEach(function (category) {
                                html += `<tr>
                                            <td><strong>${category.categoryId}</strong></td>
                                            <td>
                                                <a href="#" class="category-link" data-id="${category.categoryId}">
                                                    ${category.categoryName}
                                                </a>
                                            </td>
                                            <td>
                                                <a href="/Admin/Category/Edit/${category.categoryId}" class="btn btn-warning btn-sm">Sửa</a>
                                                <a href="/Admin/Category/Delete/${category.categoryId}" class="btn btn-danger btn-sm">Xóa</a>
                                            </td>
                                         </tr>`;
                            });

                            $("#categoryBody").html(html);
                        } else {
                            alert("Không có danh mục con!");
                        }
                    },
                    error: function () {
                        alert("Lỗi khi tải danh mục con.");
                    }
                });
            });
        });
    </script>
}
