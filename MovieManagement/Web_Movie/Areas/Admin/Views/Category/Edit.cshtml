@using Database_Movie.EF
@model Category
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<div class="card shadow-lg border-0 rounded">
    <div class="card-header">
        @* <strong>Thêm</strong> Giới thiệu *@
        <h4 class="m-0">Thêm Giới Thiệu</h4>
    </div>
    <form asp-action="Edit" asp-controller="Category" method="post" class="form-horizontal">
        <input type="hidden" asp-for="CategoryId" />
        <input type="hidden" asp-for="ParentId" value="@ViewData["ParentId"]" />
        <div class="card-body">
            <div class="row g-3">
                <div class="col-12">
                    <label for="Name" class=" form-label fw-bold ">Tên</label>
                    <input type="text" asp-for="CategoryName" placeholder="Vui lòng nhập tên giới thiệu" class="form-control shadow-sm" required>
                </div>
                <div class="col-12">
                    <label for="Status" class="form-label fw-bold">Trạng thái</label>
                    <select asp-for="Status" id="Status" class="form-control shadow-sm" @* asp-items="ViewBag.Categories" *@ required>
                        <option value="">---- Chọn trạng thái ----</option>
                        <option value="true">Kích hoạt</option>
                        <option value="false">Huỷ kích hoạt</option>
                    </select>
                </div>
            </div>

        </div>
        <div class="card-footer d-flex justify-content-between">
            <button type="submit" class="btn btn-success shadow-sm">
                <i class="fa fa-check-circle"></i> Lưu
            </button>
            <button type="reset" class="btn btn-warning shadow-sm text-white">
                <i class="fa fa-undo"></i> Làm lại
            </button>
            <a asp-action="Index" asp-controller="Category" class="btn btn-secondary shadow-sm">
                <i class="fa fa-arrow-left"></i> Trở lại
            </a>
        </div>
    </form>
</div>

